    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cloud Run: Run/Debug Locally vs lunch",
            "type": "cloudcode.cloudrun",
            "request": "launch",
            "build": {
                "docker": {
                    "path": "Dockerfile.basic"
                }
            },
            "image": "appingles-back",
            "service": {
                "name": "appingles-back",
                "containerPort": 8080,
                "resources": {
                    "limits": {
                        "memory": "256Mi"
                    }
                }
            },
            "target": {
                "minikube": {}
            },
            "watch": true,
            "debug": {
                "sourceFileMap": {
                    "${workspaceFolder}": "/app"
                }
            }
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "jinja": true
        }
    ]
}